{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "paths": {
      "*": ["./src/*"]
    },
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strict": true
  },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/*.ts",
      "src/*.tsx",
      "src/**/*.json",
      "src/*.json",
      "config/**/*.ts",
      "config/**/*.tsx",
      "config/jest/setupTests.ts", 
      "config/storybook/*.tsx",
      "config/storybook/webpack.config.ts", "config/storybook/decorators/WithTheme.tsx"
    ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
    }
  }
}
